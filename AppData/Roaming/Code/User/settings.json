{
    /*********************
        エディタ設定
    *********************/
    // フォント
    "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Segoe UI Emoji', 'BIZ UDゴシック', 'CaskaydiaMono Nerd Font', 'FiraCode Nerd Font', 'FiraMono Nerd Font', 'MesloLGM Nerd Font', 'Cascadia Code', Consolas, 'Courier New', monospace",
    // フォントサイズ
    "editor.fontSize": 14,
    // ファイルのインデントではなく、VSCodeのタブ設定を採用する
    "editor.detectIndentation": false,
    // Tabの代わりにスペースを挿入
    "editor.insertSpaces": true,
    // Tabのサイズ
    "editor.tabSize": 4,
    // スクロール量
    "editor.mouseWheelScrollSensitivity": 0.7,
    // 制御文字を表示
    "editor.renderControlCharacters": true,
    // 選択行を行番号含めすべてハイライト
    "editor.renderLineHighlight": "all",
    // スペースの表示
    "editor.renderWhitespace": "all",
    // 貼付時自動フォーマット
    "editor.formatOnPaste": true,
    // 保存時自動フォーマット
    "editor.formatOnSave": true,
    // 入力時自動フォーマット
    "editor.formatOnType": true,
    // サジェスト箇所
    "editor.quickSuggestions": {
        "comments": false, // コメントでは無効
        "strings": true, // 文字列では有効
        "other": true //  その他では有効
    },
    // サジェスト候補の初期選択
    "editor.suggestSelection": "recentlyUsedByPrefix",
    // Emmet などのスニペット候補を優先して表示
    "editor.snippetSuggestions": "inline",
    // 単語の区切り文字
    "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?　、。「」【】『』（）！？てにをはがのともへでや",
    // 文字折り返しなし
    "editor.wordWrap": "off",
    // ミニマップの表示
    "editor.minimap.enabled": false,
    // ミニマップの文字をブロック表示
    "editor.minimap.renderCharacters": false,
    // ミニマップ表示領域をハイライト
    "editor.minimap.showSlider": "always",
    // ブラケットを色分け表示
    "editor.bracketPairColorization.enabled": true,
    /*********************
    WorkBench設定
    *********************/
    // スクロール量
    "workbench.list.mouseWheelScrollSensitivity": 0.7,
    // タブにファイル名を表示
    "workbench.editor.tabSizing": "fit",
    // ステータスバー表示
    "workbench.statusBar.visible": true,
    // カラーテーマ
    "workbench.colorTheme": "One Dark Pro Darker",
    // アイコンテーマ
    "workbench.iconTheme": "material-icon-theme",
    /*********************
    パンくずの設定
    *********************/
    "breadcrumbs.enabled": true,
    "breadcrumbs.icons": true,
    "breadcrumbs.filePath": "on",
    /*********************
    ウィンドウの設定
    *********************/
    // 画面全体の表示サイズ
    "window.zoomLevel": 0,
    // コマンドセンター非表示
    "window.commandCenter": false,
    // メニューバーをAltで表示
    "window.menuBarVisibility": "toggle",
    // 自動更新
    "update.mode": "none",
    /*********************
    ウィンドウの設定
    *********************/
    // フォント
    "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font', 'Segoe UI Emoji', 'BIZ UDゴシック', 'CaskaydiaMono Nerd Font', 'FiraCode Nerd Font', 'FiraMono Nerd Font', 'MesloLGM Nerd Font', 'Cascadia Code', Consolas, 'Courier New', monospace",
    // Sixel
    "terminal.integrated.enableImages": true,
    /*********************
    ファイルの設定
    *********************/
    // 保存時に末尾を空行にする
    "files.insertFinalNewline": true,
    // 保存時に最終行以降を削除
    "files.trimFinalNewlines": true,
    // 保存時に行末のホワイトスペースを削除
    "files.trimTrailingWhitespace": true,
    // 文字コード推測
    "files.autoGuessEncoding": true,
    // 除外ファイル
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.o": true,
        "**/*.obj": true,
        "**/*.ilk": true,
        "**/*.pdb": true,
        "**/*.tlog": true,
        "**/*.idb": true,
        "**/*.dll": true
    },
    /*********************
    ファイルエクスプローラの設定
    *********************/
    // ドラッグアンドドロップの確認の有無
    "explorer.confirmDragAndDrop": false,
    // 削除の確認の有無
    "explorer.confirmDelete": false,
    // スクロール量
    "terminal.integrated.mouseWheelScrollSensitivity": 0.7,
    // テレメトリを無効化
    "telemetry.telemetryLevel": "off",
    /*********************
    Gitの設定
    *********************/
    // 旧Gitの警告を無視
    "git.ignoreLegacyWarning": true,
    // Gitの自動フェッチ
    "git.autofetch": true,
    /*********************
    拡張機能の設定
    *********************/
    // 拡張機能のヒントを無効化
    "extensions.ignoreRecommendations": true,
    // Emmet: 拡張機能の設定
    "emmet.triggerExpansionOnTab": false,
    // C/C++: フォーマッタの設定
    "C_Cpp.formatting": "default",
    // Draw.io Integration: 拡張機能の設定
    "hediet.vscode-drawio.resizeImages": null,
    // IntelliCode: サジェストでIntellisenseが有効化
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // LaTeX Workshop: 保存時にビルドするか
    "latex-workshop.latex.autoBuild.run": "onSave",
    // LaTeX Workshop: PDFビュワーの設定
    "latex-workshop.view.pdf.viewer": "browser",
    // LaTeX Workshop: 使用パッケージのコマンドや環境の補完を有効化
    "latex-workshop.intellisense.package.enabled": true,
    // LaTeX Workshop: ビルド後の出力ディレクトリ
    "latex-workshop.latex.outDir": "build",
    // LaTeX Workshop: ビルド手順の設定
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        }
    ],
    // LaTeX Workshop: ツールの設定
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "-f",
                "-silent",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::opts_knit$set(concordance = TRUE); knitr::knit('%DOCFILE_EXT%')"
            ],
            "env": {}
        },
        {
            "name": "jnw2tex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"tex\")"
            ],
            "env": {}
        },
        {
            "name": "jnw2texmintex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"texminted\")"
            ],
            "env": {}
        }
    ],
    // LaTeX Workshop: クリーン時削除するファイル
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav",
        "*.dvi",
        "*.synctex.gz"
    ],
    /*********************
    各種ファイルの設定
    *********************/
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[bibtex]": {
        // インデント幅
        "editor.tabSize": 2
    },
    "[latex]": {
        // スニペット補完中にも補完を使えるようにする
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        // インデント幅
        "editor.tabSize": 2
    },
    "[tex]": {
        // スニペット補完中にも補完を使えるようにする
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        // インデント幅
        "editor.tabSize": 2
    },
    "[python]": {
        // インデント幅
        "editor.tabSize": 4,
        // 保存時に自動整形
        "editor.formatOnSave": true,
        // 貼付時に自動整形
        "editor.formatOnPaste": false,
        // 入力後に自動整形
        "editor.formatOnType": false,
    }
}
